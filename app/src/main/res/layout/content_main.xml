<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ammyt.madridshops.activity.ShopActivity"
    tools:showIn="@layout/activity_main">

    <fragment
        android:id="@+id/activity_main_map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_map_height"
        android:background="@color/colorPrimary"/>

    <fragment
        android:id="@+id/activity_main_list_fragment"
        android:name="com.ammyt.madridshops.fragment.ShopsListFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_list_height"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/activity_main_map_fragment"
        android:background="@color/colorAccent"/>

    <ProgressBar
        android:id="@+id/shop_list_progress_bar"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_width="@dimen/progress_bar_width"
        android:layout_height="@dimen/progress_bar_height"/>

</RelativeLayout>
